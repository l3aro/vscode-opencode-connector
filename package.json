{
  "name": "opencode-connector",
  "displayName": "OpenCode Connector",
  "description": "VSCode-based extension for connecting to OpenCode",
  "publisher": "l3aro",
  "repository": {
    "type": "git",
    "url": "https://github.com/l3aro/vscode-opencode-connector.git"
  },
  "icon": "resources/icon.png",
  "version": "1.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.94.0",
    "windsurf": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opencodeConnector.addToPrompt",
        "title": "OpenCode: Add to Prompt"
      },
      {
        "command": "opencodeConnector.addMultipleFiles",
        "title": "OpenCode: Select Files to Add"
      },
      {
        "command": "opencodeConnector.checkInstance",
        "title": "OpenCode: Check Instance"
      },
      {
        "command": "opencodeConnector.showWorkspace",
        "title": "OpenCode: Show Workspace"
      },
      {
        "command": "opencodeConnector.showStatusBarMenu",
        "title": "OpenCode: Show Menu"
      },
      {
        "command": "opencodeConnector.selectDefaultInstance",
        "title": "OpenCode: Select Default Instance"
      },
      {
        "command": "opencodeConnector.sendDebugContext",
        "title": "OpenCode: Send Debug Context"
      },
      {
        "command": "opencodeConnector.sendPath",
        "title": "OpenCode: Send Path"
      },
      {
        "command": "opencodeConnector.sendRelativePath",
        "title": "OpenCode: Send Relative Path"
      }
    ],
    "keybindings": [
      {
        "command": "opencodeConnector.addToPrompt",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus",
        "title": "Add to OpenCode Prompt"
      },
      {
        "command": "opencodeConnector.addMultipleFiles",
        "key": "ctrl+shift+alt+a",
        "mac": "cmd+shift+alt+a",
        "when": "editorTextFocus",
        "title": "Add Multiple Files to OpenCode"
      },
      {
        "command": "opencodeConnector.sendDebugContext",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "inDebugMode",
        "title": "Send Debug Context to OpenCode"
      }
    ],
    "configuration": {
      "title": "OpenCode",
      "properties": {
        "opencode.port": {
          "type": "number",
          "default": 4096,
          "description": "Port for OpenCode server connection"
        },
        "opencode.binaryPath": {
          "type": "string",
          "default": "",
          "description": "Path to OpenCode binary"
        },
        "opencode.codeAction.severityLevels": {
          "type": "array",
          "default": [
            "error",
            "warning",
            "information",
            "hint"
          ],
          "description": "Diagnostic severity levels that trigger the 'Explain and Fix' code action",
          "items": {
            "type": "string",
            "enum": [
              "error",
              "warning",
              "information",
              "hint"
            ]
          }
        },
        "opencode.autoFocusTerminal": {
          "type": "boolean",
          "default": true,
          "description": "Automatically focus OpenCode terminal after sending prompts"
        }
      }
    },
    "submenus": [
      {
        "id": "opencodeConnector.addToOpencode",
        "label": "Add to Opencode"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "opencodeConnector.addToOpencode",
          "when": "resourceUri"
        }
      ],
      "opencodeConnector.addToOpencode": [
        {
          "command": "opencodeConnector.sendPath",
          "label": "Send Path"
        },
        {
          "command": "opencodeConnector.sendRelativePath",
          "label": "Send Relative Path"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "pretest": "npm run compile",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run",
    "test:integration": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pack": "vsce package -o dist/opencode-connector.vsix"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.94.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.17.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "glob": "^13.0.2",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^0.30.0",
    "vsce": "^2.15.0",
    "ovsx": "^0.10.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "axios-retry": "^4.0.0"
  }
}
